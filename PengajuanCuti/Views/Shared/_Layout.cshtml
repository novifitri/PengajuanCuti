@using Microsoft.AspNetCore.Http
@*@inject IHttpContextAccessor HttpContextAccessor*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PengajuanCuti</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #e3f2fd;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Pengajuan Cuti</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
                @*login register*@

                @if (Context.Session.GetString("Role") == null)
                {
                    <div class="my-2 my-lg-0">
                        <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Login</a>
                        <a class="btn btn-success" asp-controller="Account" asp-action="Register">Register</a>
                    </div>
                }
                else
                {
                    <div class="my-2 my-lg-0">
                        <a class="btn btn-danger" asp-controller="Account" asp-action="Logout">Logout</a>

                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            <div class="row">
                <div class="col-lg-3">
                    <div class="list-group">

                        @if (Context.Session.GetString("Role") == "Super Admin")
                        {
                            <a class="list-group-item list-group-item-action" asp-controller="Divisi" asp-action="Index">
                                Manage Divisi
                            </a>
                            <a class="list-group-item list-group-item-action" asp-controller="Role" asp-action="Index">Manage Role</a>
                            <a class="list-group-item list-group-item-action" asp-controller="JenisCuti" asp-action="Index">Manage Jenis Cuti</a>
                            <a class="list-group-item list-group-item-action" asp-controller="Karyawan" asp-action="Index">Manage Karyawan</a>
                            <a class="list-group-item list-group-item-action" asp-controller="UserRole" asp-action="Index">Manage User Role</a>
                            <a class="list-group-item list-group-item-action" asp-controller="Cuti" asp-action="Index">Manage Cuti</a>
                            <a class="list-group-item list-group-item-action" asp-controller="Account" asp-action="ChangePW">Change Password</a>
                        }
                        else if (Context.Session.GetString("Role") == "Admin")
                        {
                            <a class="list-group-item list-group-item-action" asp-controller="Divisi" asp-action="Index">
                                Manage Divisi
                            </a>
                            <a class="list-group-item list-group-item-action" asp-controller="Role" asp-action="Index">Manage Role</a>
                            <a class="list-group-item list-group-item-action" asp-controller="JenisCuti" asp-action="Index">Manage Jenis Cuti</a>
                            <a class="list-group-item list-group-item-action" asp-controller="Cuti" asp-action="Index">Manage Cuti</a>
                            <a class="list-group-item list-group-item-action" asp-controller="Account" asp-action="ChangePW">Change Password</a>
                        }
                        else
                        {
                            <a class="list-group-item list-group-item-action" asp-controller="Cuti" asp-action="Index">Ajukan Cuti</a>
                            <a class="list-group-item list-group-item-action" asp-controller="Account" asp-action="ChangePW">Change Password</a>
                        }

                    </div>
                </div>
                <div class="col-lg-8">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - PengajuanCuti - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
